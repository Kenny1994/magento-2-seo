<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/ObjectManager/etc/config.xsd">
    <preference for="Magento\Framework\View\Page\Title" type="Mageplaza\Seo\Plugin\Title" />
    <type name="Magento\Theme\Model\Design\Config\MetadataProvider">
        <arguments>
            <argument name="metadata" xsi:type="array">
                <item name="head_title_separator" xsi:type="array">
                    <item name="path" xsi:type="string">design/head/title_separator</item>
                    <item name="fieldset" xsi:type="string">other_settings/head</item>
                </item>
            </argument>
        </arguments>
    </type>
</config>
